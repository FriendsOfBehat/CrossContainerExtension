{
    "name": "friends-of-behat/cross-container-extension",
    "description": "Makes possible to inject services and parameters from other containers.",
    "license": "MIT",
    "authors": [
        {
            "name": "Kamil Kokot",
            "email": "kamil@kokot.me",
            "homepage": "http://kamil.kokot.me"
        }
    ],
    "require": {
        "php": "^7.1",

        "behat/behat": "^3.1",
        "symfony/dependency-injection": "^2.8|^3.0|^4.0"
    },
    "require-dev": {
        "friends-of-behat/test-context": "^1.0",
        "phpspec/phpspec": "^4.0@alpha",
        "symfony/http-kernel": "^2.8|^3.0|^4.0",
        "phpunit/phpunit": "^5.7.13|^6.0"
    },
    "suggest": {
        "symfony/http-kernel": "^2.8|^3.0|^4.0"
    },
    "autoload": {
        "psr-4": { "FriendsOfBehat\\CrossContainerExtension\\": "src/" }
    },
    "autoload-dev": {
        "psr-4" : {
            "spec\\FriendsOfBehat\\CrossContainerExtension\\": "spec/",
            "tests\\FriendsOfBehat\\CrossContainerExtension\\": "tests/"
        }
    }
}
